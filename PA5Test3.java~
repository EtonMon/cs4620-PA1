import meggy.Meggy;

class PA5Test1{
    public static void main(String[] args){
	Meggy.setPixel((byte)2, (byte)6, Meggy.Color.VIOLET);
        
	new Something().dot();
        
    }
}

class Something{
    public void dot(){
        Another thing;
	thing = new Another();
	while(true){
	    thing.dot();
	}
    }
}

class Another{
    int x;
    
    public void dot(){
        if(7<x){
	    x=0;
	}
	Meggy.setPixel((byte)x,(byte)2,Meggy.Color.RED);
	x=x+1;
    }

    public void setXTo0(){
	x=0;
    }
}
